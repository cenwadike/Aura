{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "Node",
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "server.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}